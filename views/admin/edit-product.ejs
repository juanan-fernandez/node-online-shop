<%- include('../includes/head.ejs') %>
   <link rel="stylesheet" href="/css/forms.css">
   <link rel="stylesheet" href="/css/product.css">
   </head>

   <body>
      <%- include('../includes/navigation.ejs') %>
         <main>
            <form class="product-form" action="<%=(path ==='/admin/add-product' ? '/admin/add-product' : '/admin/edit-product')%>" method="POST" enctype="multipart/form-data">
               <div class="form-control">
                  <label for="title">Title</label>
                  <input type="text" name="title" id="title" value="<%=(product ? product.title :'')%>"
                           class="<%=validationErrs.find(e => e.param === 'title') ? 'red' : ''%>">
               </div>
               <!-- <div class="form-control">
                  <label for="imageUrl">Image URL</label>
                  <input type="text" name="imageUrl" id="imageUrl" value="<%=(product ? product.imageUrl : '')%>"
                           class="<%=validationErrs.find(e => e.param === 'imageUrl') ? 'red' : ''%>">
               </div> -->
               <div class="form-control">
                  <label for="image">Upload Image </label>
                  <input type="file" name="image" id="image">
               </div>
               <div class="form-control">
                  <label for="price">Price</label>
                  <input type="number" name="price" id="price" step="0.01" value="<%=(product ? product.price : 0)%>"
                           class="<%=validationErrs.find(e => e.param === 'price') ? 'red' : ''%>">
               </div>
               <div class="form-control">
                  <label for="description">Description</label>
                  <textarea name="description" id="description" rows="5"
                     class="<%=validationErrs.find(e => e.param === 'description') ? 'red' : ''%>"
                     value="<%=(product ? product.description : '')%>"><%=(product ? product.description : '')%></textarea>
               </div>
               <% if(product){ %>
                  <input type="hidden" name="productId" value="<%=product._id%>"/>
               <% } %> 
               <button class="btn" type="submit">
                  <%=(path ==='/admin/edit-product' ? 'Update' : 'Add' )%> Product
               </button>
               <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            </form>
            <%if (errorMessage.length > 0) {%>
               <div class="user-message user-message--err">
                  <p><%-errorMessage%></p>
                  <p>Try again.</p>
               </div>
            <%}%>
         </main>
         <%- include('../includes/end.ejs') %>