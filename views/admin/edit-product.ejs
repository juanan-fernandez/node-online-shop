<%- include('../includes/head.ejs') %>
   <link rel="stylesheet" href="/css/forms.css">
   <link rel="stylesheet" href="/css/product.css">
   </head>

   <body>
      <%- include('../includes/navigation.ejs') %>
         <main>
            <form class="product-form" action="<%=(path ==='/admin/add-product' ? '/admin/add-product' : '/admin/edit-product')%>" method="POST">
               <div class="form-control">
                  <label for="title">Title</label>
                  <input type="text" name="title" id="title" value="<%=(product ? product.title :'')%>">
               </div>
               <div class="form-control">
                  <label for="imageUrl">Image URL</label>
                  <input type="text" name="imageUrl" id="imageUrl" value="<%=(product ? product.imageUrl : '')%>">
               </div>
               <div class="form-control">
                  <label for="price">Price</label>
                  <input type="number" name="price" id="price" step="0.01" value="<%=(product ? product.price : 0)%>">
               </div>
               <div class="form-control">
                  <label for="description">Description</label>
                  <textarea name="description" id="description" rows="5"
                     value="<%=(product ? product.description : '')%>"><%=(product ? product.description : '')%></textarea>
               </div>
               <% if(product){ %>
                  <input type="hidden" name="productId" value="<%=product._id%>"/>
               <% } %> 
               <button class="btn" type="submit">
                  <%=(product ? 'Update' : 'Add' )%> Product
               </button>
               <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            </form>
         </main>
         <%- include('../includes/end.ejs') %>