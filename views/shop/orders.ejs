<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(orders.length > 0){ %>
                <ul>
                    <%orders.forEach(o => {%>
                        <li>
                            <h1># <%=o._id%></h1>
                            <ul>
                                <%o.items.forEach(p=> {%>
                                    <li><%=p.title%> (<%=p.quantity%>)</li>
                                <%})%>
                            </ul>
                        </li>
                    <%})%>
                </ul>
            <%}else {%>
                <h1>No orders placed yet!</h1>
            <%}%>
        </main>
        <%- include('../includes/end.ejs') %>